@model InvoiceCreator.Models.MainModels.Invoice

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Invoice</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-6 col-md-3">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Meno a priezvisko dodávateľa</label>
                <input asp-for="Supplier.Name" class="form-control" />
                <span asp-validation-for="Supplier.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Adresa dodávateľa</label>
                <input asp-for="Supplier.Address" class="form-control" />
                <span asp-validation-for="Supplier.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Krajina</label>
                <input asp-for="Supplier.Country" class="form-control" />
                <span asp-validation-for="Supplier.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">IČO</label>
                <input asp-for="Supplier.ICO" class="form-control" />
                <span asp-validation-for="Supplier.ICO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">DIČ</label>
                <input asp-for="Supplier.DIC" class="form-control" />
                <span asp-validation-for="Supplier.DIC" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Supplier.IsDPHPayer" /> Je dodávateľ platcom DPH?
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">IČ DPH</label>
                <input asp-for="Supplier.IC_DPH" class="form-control" />
                <span asp-validation-for="Supplier.IC_DPH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">URL</label>
                <input asp-for="Supplier.URL" class="form-control" />
                <span asp-validation-for="Supplier.URL" class="text-danger"></span>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Meno a priezvisko zákazníka</label>
                <input asp-for="Costumer.Name" class="form-control" />
                <span asp-validation-for="Costumer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Adresa zákazníka</label>
                <input asp-for="Costumer.Address" class="form-control" />
                <span asp-validation-for="Costumer.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Krajina</label>
                <input asp-for="Costumer.Country" class="form-control" />
                <span asp-validation-for="Costumer.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">IČO</label>
                <input asp-for="Costumer.ICO" class="form-control" />
                <span asp-validation-for="Costumer.ICO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">DIČ</label>
                <input asp-for="Costumer.DIC" class="form-control" />
                <span asp-validation-for="Costumer.DIC" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Costumer.IsDPHPayer" /> Je zákazník platcom DPH?
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">IČ DPH</label>
                <input asp-for="Costumer.IC_DPH" class="form-control" />
                <span asp-validation-for="Costumer.IC_DPH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">URL</label>
                <input asp-for="Costumer.URL" class="form-control" />
                <span asp-validation-for="Costumer.URL" class="text-danger"></span>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Číslo faktúry</label>
                <input asp-for="NumberOfInvoice" class="form-control" />
                <span asp-validation-for="NumberOfInvoice" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label class="control-label">Dátum vyhotovenia</label>
                <input type="date" asp-for="DateOfIssue" class="form-control" />
                <span asp-validation-for="DateOfIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Dátum splatnosti</label>
                <input type="date" asp-for="Supplier.PaymentData.DueDate" class="form-control" />
                <span asp-validation-for="Supplier.PaymentData.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Banka</label>
                <input asp-for="Supplier.PaymentData.Bank" class="form-control" />
                <span asp-validation-for="Supplier.PaymentData.Bank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">IBAN</label>
                <input asp-for="Supplier.PaymentData.IBAN" class="form-control" />
                <span asp-validation-for="Supplier.PaymentData.IBAN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">SWIFT</label>
                <input asp-for="Supplier.PaymentData.SWIFT" class="form-control" />
                <span asp-validation-for="Supplier.PaymentData.SWIFT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Variablný symbol</label>
                <input asp-for="Supplier.PaymentData.VariableSymbol" class="form-control" />
                <span asp-validation-for="Supplier.PaymentData.VariableSymbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Konštantný symbol</label>
                <input asp-for="Supplier.PaymentData.ConstantSymbol" class="form-control" />
                <span asp-validation-for="Supplier.PaymentData.ConstantSymbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Poznámka k platbe</label>
                <input asp-for="Supplier.PaymentData.Note" class="form-control" />
                <span asp-validation-for="Supplier.PaymentData.Note" class="text-danger"></span>
            </div>
        </div>

        <div class="col-6 col-md-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Model.Services != null)
            {
                foreach (var item in Model.Services)
                {
                    <div class="form-group">
                        <label class="control-label">Názov služby</label>
                        <input asp-for="Services.Where(a => a.Id == item.Id).FirstOrDefault().NameOfService" class="form-control" />
                        <span asp-validation-for="Services.Where(a => a.Id == item.Id).FirstOrDefault().NameOfService" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Popis služby</label>
                        <input asp-for="Services.Where(a => a.Id == item.Id).FirstOrDefault().DescriptionOfService" class="form-control" />
                        <span asp-validation-for="Services.Where(a => a.Id == item.Id).FirstOrDefault().DescriptionOfService" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Počet jednotiek</label>
                        <input asp-for="Services.Where(a => a.Id == item.Id).FirstOrDefault().NumberOfUnits" class="form-control" />
                        <span asp-validation-for="Services.Where(a => a.Id == item.Id).FirstOrDefault().NumberOfUnits" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Sadzba DPH</label>
                        <select asp-for="Services.Where(a => a.Id == item.Id).FirstOrDefault().DPH" class="form-control">
                            <option value="20">20</option>
                            <option value="10">10</option>
                            <option value="5">5</option>
                        </select>
                        <span asp-validation-for="Services.Where(a => a.Id == item.Id).FirstOrDefault().DPH" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Jednotková cena s DPH</label>
                        <input type="number" asp-for="Services.Where(a => a.Id == item.Id).FirstOrDefault().UnitPriceWithDPH" class="form-control" />
                        <span asp-validation-for="Services.Where(a => a.Id == item.Id).FirstOrDefault().UnitPriceWithDPH" class="text-danger"></span>
                    </div>
                }
            }

            <hr />
            <div class="form-group">
                <label class="control-label">Poznámka</label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <hr />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
