@model InvoiceCreator.Models.MainModels.Supplier

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Supplier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" id="SupplierName" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" id="SupplierAddress" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" id="SupplierCountry" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ICO" class="control-label"></label>
                <input asp-for="ICO" id ="SupplierIco" class="form-control" />
                <span asp-validation-for="ICO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DIC" class="control-label"></label>
                <input asp-for="DIC" id="SupplierDic" class="form-control" />
                <span asp-validation-for="DIC" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDPHPayer" /> @Html.DisplayNameFor(model => model.IsDPHPayer)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IC_DPH" class="control-label"></label>
                <input asp-for="IC_DPH" class="form-control" />
                <span asp-validation-for="IC_DPH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="URL" class="control-label"></label>
                <input asp-for="URL" class="form-control" />
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="button" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
